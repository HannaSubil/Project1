<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgblue"
    tools:context=".RegistrationPage">


  <TextView
      android:id="@+id/registerlabel"
      android:layout_width="165dp"
      android:layout_height="35dp"
      android:layout_marginTop="25dp"
      android:layout_marginBottom="8dp"
      android:text="REGISTER"
      android:textColor="#151414"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/tableLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.56"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <TableLayout
      android:id="@+id/tableLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="16dp"
      android:layout_marginBottom="87dp"
      app:layout_constraintBottom_toTopOf="@+id/submit_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registerlabel">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

      <TextView
          android:id="@+id/namelabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="Name   :"
          android:textColor="#151414"
          android:textSize="16sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/nametext"
          android:layout_width="230dp"
          android:layout_height="wrap_content"

          android:layout_marginLeft="10dp"
          android:hint="Name"
          android:textColor="#0E0E0D"
          android:textSize="16sp"
          tools:ignore="TouchTargetSizeCheck" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/placelabel"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:foregroundGravity="right"
          android:text="Place  :"
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/placetext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"


          android:layout_marginLeft="10dp"
          android:gravity="start"
          android:hint="Place"
          android:minWidth="48dp"
          android:textColor="#131312"
          android:textSize="16sp"
          tools:ignore="TouchTargetSizeCheck" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/agelabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="Age  :"
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/agetext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"


          android:layout_marginLeft="10dp"
          android:hint="age"
          android:minWidth="48dp"
          android:textColor="#131312"
          android:textSize="16sp"
          tools:ignore="TouchTargetSizeCheck" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/statelabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="State :"
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <Spinner
          android:id="@+id/statespinner"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"


          android:layout_marginLeft="10dp"

          android:addStatesFromChildren="false"
          android:foregroundGravity="center"
          android:minWidth="48dp"
          android:textColor="#131312"
          android:textSize="16sp"
          tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/genderlabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="Gender  :"
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <RadioGroup
          android:id="@+id/rg_gender"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/maleradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/femalerado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
      </RadioGroup>


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/languagelabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="Languages : "
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <CheckBox
            android:id="@+id/ch_malayalam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malayalam" />

        <CheckBox
            android:id="@+id/ch_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English" />

        <CheckBox
            android:id="@+id/ch_hindi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hindi" />

        <CheckBox
            android:id="@+id/ch_tamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamil" />

      </LinearLayout>
    </TableRow>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/usernamelabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="UserName :"
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/usernametext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"


          android:layout_marginLeft="10dp"
          android:hint="UserName"
          android:minWidth="48dp"
          android:textColor="#131312"
          android:textSize="16sp"
          tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/Passwordlabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="Password :"
          android:textColor="#0E0E0E"
          android:textSize="16sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/passwodtext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:hint="password"
          android:inputType="textPassword"
          android:minWidth="48dp"

          android:textColor="#131312"
          android:textSize="16sp"
          tools:ignore="TouchTargetSizeCheck" />


    </TableRow>


  </TableLayout>

  <Button
      android:id="@+id/submit_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="128dp"
      android:layout_marginEnd="157dp"
      android:text="Submit"
      android:textSize="20sp"
      app:iconGravity="textEnd|textStart"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tableLayout">

  </Button>


</androidx.constraintlayout.widget.ConstraintLayout>